package com.simplilearn.CucumberFramework;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;
import io.github.bonigarcia.wdm.WebDriverManager;
import junit.framework.Assert;

public class strpDefinations {
	WebDriver driver;
	@Given("User launch Amazon webpage with {string}")
	public void user_launch_amazon_webpage_with(String string) {
		 WebDriverManager.chromedriver().setup();
	    driver = new ChromeDriver();
	   driver.get(string);
	   driver.manage().window().maximize();
		driver.manage().deleteAllCookies();
		driver.manage().timeouts().pageLoadTimeout(Duration.ofSeconds(60));
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(60));
		
	}

	@When("User wait for location pop up screen")
	public void user_wait_for_location_pop_up_screen() throws InterruptedException {
	   driver.wait(1000);
	   String expectedPopUpTitle= "We're showing you items that ship to India. To see items that ship to a different country, change your delivery address";
	   String actualPopUpTitile= driver.findElement(By.xpath("//*[@id=\"glow-toaster-body\"]/span")).getText();
	   Assert.assertEquals(expectedPopUpTitleex, actualPopUpTitile);
	}

	@Then("User click on dismiss button")
	public void user_click_on_dismiss_button() {
	    driver.findElement(By.xpath("//*[@id=\"nav-main\"]/div[1]/div/div/div[3]/span[1]/span/input")).click();
	}

	@Then("User see sign up or sign in button")
	public void user_see_sign_up_or_sign_in_button() {
	  String actualButton= driver.findElement(By.xpath("//*[@id=\"nav-signin-tooltip\"]/a/span")).getText();
	  String ExpectedButton = "Sign in";
	  Assert.assertEquals(actualButton, ExpectedButton);
	}

	@Then("User click on sign in")
	public void user_click_on_sign_in() {
		driver.findElement(By.xpath("//*[@id=\"nav-signin-tooltip\"]/a/span")).click();
	}

