	@When("User see sign up or sign in button")
	public void user_see_sign_up_or_sign_in_button() {
	  String actualButton= driver.findElement(By.xpath("//*[@id=\"nav-signin-tooltip\"]/a/span")).getText();
	  String ExpectedButton = "Sign in";
	  Assert.assertEquals(actualButton, ExpectedButton);
	}

	@Then("User click on sign in")
	public void user_click_on_sign_in() {
		driver.findElement(By.xpath("//*[@id=\"nav-signin-tooltip\"]/a/span")).click();
	}

	@Then("User see login page")
	public void user_see_login_page() {
	  String actualTitle = driver.getTitle();
	  String expectedTitle= "Amazon Sign In";
	  Assert.assertEquals(actualTitle, expectedTitle);
	}

	@Then("User enter {string}")
	public void user_enter(String string)  {
	    driver.findElement(By.xpath("//*[@id=\"ap_email\"]")).sendKeys(string);
	}

	@Then("User clicks on continue")
	public void user_clicks_on_continue() {
	    driver.findElement(By.xpath("//*[@id=\"continue\"]")).click();
	}

	@When("User click on continue user navigated to password page")
	public void user_click_on_continue_user_navigated_to_password_page() throws InterruptedException {
	    String actualLabel = driver.findElement(By.xpath("//*[@id=\"authportal-main-section\"]/div[2]/div/div[2]/div/form/div/div[1]/div[1]/div[1]/label")).getText();
	    String ExpectedLabel = "Password";
	    Assert.assertEquals(actualLabel, ExpectedLabel);
		
	}

	@Then("User enter password {string}")
	public void user_enter_password(String string)  {
		driver.findElement(By.xpath("//*[@id=\"ap_password\"]")).sendKeys(string);
	  
	}

	@Then("user click on sign in button")
	public void user_click_on_sign_in_button() {
	   driver.findElement(By.xpath("//*[@id=\"signInSubmit\"]")).click();
	   
	}
